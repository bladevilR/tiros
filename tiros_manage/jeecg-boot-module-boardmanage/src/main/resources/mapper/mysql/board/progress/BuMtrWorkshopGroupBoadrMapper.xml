<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.board.progress.mapper.BuMtrWorkshopGroupBoardMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.board.progress.bean.BuMtrWorkshopGroup">
        <id column="id" property="id"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="group_name" property="groupName"/>
        <result column="group_desc" property="groupDesc"/>
        <result column="depart_id" property="departId"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="monitor" property="monitor"/>
        <result column="monitor2" property="monitor2"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, workshop_id, group_name, group_desc, depart_id, create_time, create_by, update_time, update_by,
        monitor, monitor2
    </sql>

    <select id="selectAllList" resultType="org.jeecg.modules.board.progress.bean.BuMtrWorkshopGroup">
        select t.*,
               t1.realname as monitorName,
               t2.realname as monitor2Name
        from bu_mtr_workshop_group t
                 left join sys_user t1 on t1.id = t.monitor
                 left join sys_user t2 on t2.id = t.monitor2
    </select>

</mapper>
