    <select id="selectReguTechFile" resultType="org.jeecg.modules.basemanage.regu.bean.BuRepairReguTechFile">
        select t.*,
               t1.name,
               t1.savepath,
               t1.file_size as fileSize,
               t1.type,
               t1.create_time as uploadDate,
               t1.remark
        from bu_repair_regu_tech_file t
                 left join bu_doc_file t1 on t1.id = t.file_id
        where t.regu_detail_id = #{id}
    </select>
    <select id="selectReguMaterial" resultType="org.jeecg.modules.basemanage.regu.bean.BuRepairReguMaterial">
        SELECT t.*,
               t1.code,
               t1.name,
               t1.spec,
               t1.unit,
               t1.price,
               t1.kind,
               t1.category1,
               t1.category2
        FROM bu_repair_regu_material t
                 LEFT JOIN bu_material_type t1 ON t1.id = t.material_type_id
        where t.regu_detail_id = #{id}
    </select>
    <select id="selectReguPerson" resultType="org.jeecg.modules.basemanage.regu.bean.BuRepairReguPerson">
