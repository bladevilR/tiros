    <select id="selectListByRepairReguDetailQueryVO"
            resultType="org.jeecg.modules.basemanage.regu.bean.BuRepairReguDetail">
        <if test="queryVO.title != null and queryVO.title != ''">
            select t.*,
            decode((select count(1) from bu_repair_regu_detail where parent_id = t.id), 0, 'false', 'true') as hasChildren,
            t2.title as parentName,
            t1.name as assetTypeName
            from bu_repair_regu_detail t
            left join bu_train_asset_type t1 on t.asset_type_id = t1.id
            left join bu_repair_regu_detail t2 on t2.id = t.parent_id
            <where>
                <if test="queryVO.reguId != null and queryVO.reguId != ''">
                    and t.regu_id = #{queryVO.reguId}
                </if>
                <if test="queryVO.type != null">
                    and t.type = #{queryVO.type}
                </if>
                <if test="queryVO.title != null and queryVO.title != ''">
                    and t.title like concat('%',#{queryVO.title},'%')
                    <if test="queryVO.parentId != null and queryVO.parentId != ''">
                        and t.parent_id = #{queryVO.parentId}
                    </if>
                </if>
            </where>
            order by CAST(t.no AS SIGNED)
        </if>
        <if test="queryVO.title == null or queryVO.title == ''">
            select t.*,
            decode((select count(1) from bu_repair_regu_detail where parent_id = t.id), 0, 'false', 'true') as hasChildren,
            t2.title as parentName,
            t1.name as assetTypeName
            from bu_repair_regu_detail t
            left join bu_train_asset_type t1 on t.asset_type_id = t1.id
            left join bu_repair_regu_detail t2 on t2.id = t.parent_id
            <where>
                <if test="queryVO.reguId != null and queryVO.reguId != ''">
                    and t.regu_id = #{queryVO.reguId}
                </if>
                <if test="queryVO.type != null">
                    and t.type = #{queryVO.type}
                </if>
                    <if test="queryVO.parentId != null and queryVO.parentId != ''">
                        and t.parent_id = #{queryVO.parentId}
                    </if>
                    <if test="queryVO.parentId == null or queryVO.parentId == ''">
                        and (t.parent_id is null or t.parent_id = '')
                    </if>
            </where>
            order by CAST(t.no AS SIGNED)
        </if>
    </select>

    <select id="selectReguDetailById" resultMap="ResultMap_BuRepairReguDetail_Collection">
        SELECT t.*,
               decode((select count(1) from bu_repair_regu_detail where parent_id = t.id), 0, 'false', 'true') as hasChildren,
               if((t.parent_id = '' or t.parent_id = null), '',
                  (select title from bu_repair_regu_detail where id = t.parent_id))                     as parentName,
               t1.name                                                                                  as assetTypeName
        FROM bu_repair_regu_detail t
                 left join bu_train_asset_type t1 on t.asset_type_id = t1.id
        where t.id = #{id}
    </select>

    <select id="selectTreeByIdList" resultMap="ResultMap_BuRepairReguDetail_SimpleTree">
        select id, parent_id
        from bu_repair_regu_detail
        <choose>
            <when test="idList != null and idList.size > 0">
                where id in
                <foreach collection="idList" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </when>
            <otherwise>
                where id = '-1'
            </otherwise>
        </choose>
    </select>

