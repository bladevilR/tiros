<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.tpplan.mapper.BuTpRepairPlanSpeEqMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.tpplan.bean.BuTpRepairPlanSpeEq">
        <id column="id" property="id"/>
        <result column="tp_task_id" property="tpTaskId"/>
        <result column="spec_asset_id" property="specAssetId"/>
        <result column="asset_name" property="assetName"/>
        <result column="asset_code" property="assetCode"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="time_len" property="timeLen"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tp_task_id, spec_asset_id, asset_name, asset_code, start_time, end_time, time_len, remark,
        create_time, create_by, update_time, update_by
    </sql>

    <!-- 插入value sql -->
    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id},
            #{item.tpTaskId},
            #{item.specAssetId},
            #{item.assetName},
            #{item.assetCode},
            #{item.startTime},
            #{item.endTime},
            #{item.timeLen},
            #{item.remark},
            #{item.createTime},
            #{item.createBy},
            #{item.updateTime},
            #{item.updateBy},
        </trim>
    </sql>


    <insert id="insertList" parameterType="java.util.List">
        <if test="list != null and list.size > 0">
            INSERT INTO bu_tp_repair_plan_spe_eq
            (
            <include refid="Base_Column_List"/>
            )
            VALUES
            <foreach collection="list" item="item" index="index" separator=",">
                (
                <include refid="insertValueItems"/>
                )
            </foreach>
        </if>
    </insert>

    <select id="selectListByPlanId" resultType="org.jeecg.modules.basemanage.tpplan.bean.BuTpRepairPlanSpeEq">
        select t.*,
               t1.task_name,
               t1.work_group_id,
               t3.group_name as workGroupName
        from bu_tp_repair_plan_spe_eq t
                 left join bu_tp_repair_plan_task t1 on t1.id = t.tp_task_id
                 left join bu_spec_assets t2 on t1.id = t.spec_asset_id
                 left join bu_mtr_workshop_group t3 on t3.id = t1.work_group_id
        where t1.plan_id = #{planId}
        order by t1.work_group_id, t2.asset_code, t1.start_time, t.start_time
    </select>

    <select id="selectListByTaskId" resultType="org.jeecg.modules.basemanage.tpplan.bean.BuTpRepairPlanSpeEq">
        select t.*,
               t1.task_name,
               t1.work_group_id,
               t3.group_name as workGroupName
        from bu_tp_repair_plan_spe_eq t
                 left join bu_tp_repair_plan_task t1 on t1.id = t.tp_task_id
                 left join bu_spec_assets t2 on t1.id = t.spec_asset_id
                 left join bu_mtr_workshop_group t3 on t3.id = t1.work_group_id
        where t.tp_task_id = #{taskId}
        order by t2.asset_code, t1.start_time, t.start_time
    </select>

</mapper>
