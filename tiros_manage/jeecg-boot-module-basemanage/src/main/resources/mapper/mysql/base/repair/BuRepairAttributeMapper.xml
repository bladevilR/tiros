<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.repair.mapper.BuRepairAttributeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.repair.bean.BuRepairAttribute">
        <id column="id" property="id"/>
        <result column="attribute_type" property="attributeType"/>
        <result column="attribute_code" property="attributeCode"/>
        <result column="attribute_name" property="attributeName"/>
        <result column="parent_id" property="parentId"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, attribute_type, attribute_code, attribute_name, parent_id, remark, create_time, create_by, update_time, update_by
    </sql>


    <select id="selectPageByCondition" resultType="org.jeecg.modules.basemanage.repair.bean.BuRepairAttribute">
        select t.*,
        t1.attribute_type as parentType,
        t1.attribute_name as parentName
        from bu_repair_attribute t
        left join bu_repair_attribute t1 on t1.id = t.parent_id
        <where>
            <if test="queryVO.searchText != null and queryVO.searchText != ''">
                and
                (
                t.attribute_code like concat('%',#{queryVO.searchText},'%')
                or
                t.attribute_name like concat('%',#{queryVO.searchText},'%')
                )
            </if>
            <if test="queryVO.attributeType != null">
                and t.attribute_type = #{queryVO.attributeType}
            </if>
        </where>
        order by t.attribute_type, t1.attribute_type, t1.attribute_code, t.attribute_code
    </select>

</mapper>
