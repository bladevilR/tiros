<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.repair.mapper.BuRepairAttrProgRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.repair.bean.BuRepairAttrProgRel">
        <id column="id" property="id"/>
        <result column="attribute_type" property="attributeType"/>
        <result column="attribute_id" property="attributeId"/>
        <result column="program_id" property="programId"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, attribute_type, attribute_id, program_id, create_time, create_by, update_time, update_by
    </sql>


    <select id="selectListByAttributeId" resultType="org.jeecg.modules.basemanage.repair.bean.BuRepairAttrProgRel">
        select t.*,
               t1.attribute_code,
               t1.attribute_name,
               t2.name as programName
        from bu_repair_attr_prog_rel t
                 left join bu_repair_attribute t1 on t1.id = t.attribute_id
                 left join bu_repair_program t2 on t2.id = t.program_id
        where t.attribute_id = #{attributeId}
        order by t1.attribute_code, t2.code
    </select>

</mapper>
