<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.doc.mapper.BuDocDirectoryGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.doc.bean.BuDocDirectoryGroup">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="belonger" property="belonger"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="company_id" property="companyId"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="line_id" property="lineId"/>
        <collection property="children" column="id" ofType="org.jeecg.modules.basemanage.doc.bean.BuDocDirectoryGroup"
                    select="selectChildren"/>
    </resultMap>

    <!-- 通用查询结果列  parent_id in(select id from bu_doc_directory)-->
    <sql id="Base_Column_List">
        id, name, parent_id, belonger, create_time, create_by, update_time, update_by, company_id, workshop_id, line_id
    </sql>


    <delete id="deleteFile">
        delete
        from bu_doc_directory_group
        where parent_id = #{id}
    </delete>

    <select id="selectChildren" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from bu_doc_directory_group where parent_id=#{id} and status=1
    </select>

    <select id="listDirectoryTree" parameterType="string" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from bu_doc_directory_group
        where belonger=#{workGroupId} and parent_id in ( select id from bu_doc_directory)
        and status=1
        <if test="!isAdmin">
            or id in(select obj_id from bu_doc_privilege where obj_type=1 and (target_id=#{workGroupId}
            <if test="roles!=null">
                or target_id in
                <foreach collection="roles" item="item" open="(" separator="," close=")">#{item}</foreach>
            </if>
            ))
        </if>
        <if test="id!=null and id!=''">
            and id=#{id}
        </if>
    </select>

    <select id="selectWorkGroupId" resultType="java.lang.String">
        select id
        from sys_depart
        where org_code = #{orgCode}
    </select>

    <select id="selectRole" resultType="java.lang.String">
        select t1.role_code
        from sys_user_role t
                 left join sys_role t1 on t.role_id = t1.id
        where t.user_id = #{userId}
    </select>

    <select id="selectRoleId" resultType="java.lang.String">
        select t.role_id
        from sys_user_role t
                 left join sys_role t1 on t.role_id = t1.id
        where t.user_id = #{userId}
    </select>

</mapper>
