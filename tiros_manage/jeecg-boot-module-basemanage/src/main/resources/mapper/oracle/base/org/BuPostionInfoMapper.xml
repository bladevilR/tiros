<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.org.mapper.BuPostionInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.org.bean.BuPostionInfo">
        <id column="id" property="id" />
        <result column="position_name" property="positionName" />
        <result column="remark" property="remark" />
        <result column="wages" property="wages" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, position_name, remark, wages
    </sql>

    <!-- 插入value sql -->
    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id, jdbcType=VARCHAR},
            #{item.positionName, jdbcType=VARCHAR},
            #{item.remark, jdbcType=VARCHAR},
            #{item.wages, jdbcType=DECIMAL}
        </trim>
    </sql>


    <insert id="insertList" parameterType="list">
        insert into bu_postion_info
        (
        <include refid="Base_Column_List"/>
        )
        <foreach collection="list" item="item" index="index" separator="union all">
            (
            select
            <include refid="insertValueItems"/>
            from dual
            )
        </foreach>
    </insert>

</mapper>
