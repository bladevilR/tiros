<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.basemanage.doc.mapper.BuDocDirectoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.basemanage.doc.bean.BuDocDirectory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="hidden" property="hidden"/>
        <result column="create_type" property="createType"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="company_id" property="companyId"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="line_id" property="lineId"/>
        <collection property="children" column="id" ofType="org.jeecg.modules.basemanage.doc.bean.BuDocDirectory"
                    select="selectChildren"/>
    </resultMap>
    <select id="selectChildren" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from bu_doc_directory where parent_id=#{id}
        and hidden=0 and status=1
    </select>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, parent_id, hidden, create_type, create_by, create_time, update_time, update_by, company_id, workshop_id, line_id
    </sql>

    <select id="listDirectoryTree" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from bu_doc_directory where CREATE_TYPE=1
        and hidden=0 and status=1
        <if test="id!=null and id!=''">
            <if test="id='1' or id='2'or id='3' or id='4'">
                and id=#{id}
            </if>
        </if>
    </select>

    <select id="listDirectoryTreeTech" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from bu_doc_directory where hidden=0 and status=1 and id='1'
    </select>

    <select id="selectSharedDirectory" parameterType="string"
            resultType="org.jeecg.modules.basemanage.doc.bean.BuDocDirectory">
        select t.*,
        decode((select count(1) from bu_doc_directory where parent_id = t.id), 0, 0, 1) as hasChildren
        from bu_doc_directory t where STATUS=1
        <choose>
            <when test='id!="-1" and id!=null and id!="" '>
                and t.parent_id=#{id}
            </when>
            <otherwise>
                and t.id='2' and (t.parent_id is null or t.parent_id='')
            </otherwise>
        </choose>

    </select>


</mapper>
