               t7.flt_name                    as faultCodeCodeDes,
               t8.name                        as outSupplierName,
               t9.plan_name,
               NVL(t10.process_status, '未发起') AS wfStatus,
               t10.process_candidate,
               t11.name                       as workstationName
        FROM bu_fault_info t
                 LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
                 LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
                 LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
                 LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
                 LEFT JOIN bu_train_asset_type t5 ON t5.id = t.sub_sys_id
                 LEFT JOIN bu_fault_category t6 ON t6.id = t.category_id
                 LEFT JOIN bu_fault_code_new t7 ON t7.flt_code = t.fault_code_id
                 LEFT JOIN bu_base_supplier t8 ON t8.id = t.out_supplier_id
                 LEFT JOIN bu_repair_plan t9 ON t9.id = t.plan_id
                 LEFT JOIN wf_biz_status t10 ON t10.business_key = t.id
                 left join bu_mtr_workstation t11 on t11.id = t.work_station_id
        WHERE t.id = #{id}
    </select>

