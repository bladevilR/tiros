    <!-- 根据条件分页查询故障信息 -->
    <select id="selectPageByCondition" resultType="org.jeecg.modules.group.fault.bean.BuFaultInfo">
        SELECT
        t.*,
        t1.line_name AS lineName,
        t2.name AS sysName,
        t3.name AS faultAssetName,
        t4.group_name AS reportGroupName,
        t5.plan_name,
        NVL(t6.process_status, '未发起') AS wfStatus,
        t6.process_candidate,
        t7.flt_code as faultCodeCode,
        t7.flt_name as faultCodeCodeDes
        FROM bu_fault_info t
        LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
        LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
        LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
        LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
        LEFT JOIN bu_repair_plan t5 ON t5.id = t.plan_id
        LEFT JOIN wf_biz_status t6 ON t6.business_key = t.id
        LEFT JOIN bu_fault_code_new t7 ON t7.flt_code=t.fault_code_id
        <where>
            <if test="queryVO.searchText != null and queryVO.searchText != ''">
                AND
                (
                t.fault_sn LIKE '%'||#{queryVO.searchText}||'%'
                OR
                t.fault_desc LIKE '%'||#{queryVO.searchText}||'%'
                )
            </if>
            <if test="queryVO.status != null">
                AND t.status = #{queryVO.status}
            </if>
            <if test="queryVO.submitStatus != null">
                AND t.submit_status = #{queryVO.submitStatus}
            </if>
            <if test="queryVO.happenTime != null">
                AND to_char(t.report_time,'yyyy-mm-dd') = to_char(#{queryVO.happenTime},'yyyy-mm-dd')
            </if>
            <if test="queryVO.groupId != null and queryVO.groupId != ''">
                AND t.report_group_id = #{queryVO.groupId}
            </if>
            <if test="queryVO.fromType != null">
                AND t.from_type = #{queryVO.fromType}
            </if>
        </where>
        ORDER BY t.report_time DESC, t.fault_sn DESC
    </select>

