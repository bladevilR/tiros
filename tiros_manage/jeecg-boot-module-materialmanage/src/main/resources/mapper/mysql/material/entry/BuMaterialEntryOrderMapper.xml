<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.material.entry.mapper.BuMaterialEntryOrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.material.entry.bean.BuMaterialEntryOrder">
        <id column="id" property="id"/>
        <result column="entry_no" property="entryNo"/>
        <result column="entry_date" property="entryDate"/>
        <result column="entry_dept_id" property="entryDeptId"/>
        <result column="company_id" property="companyId"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="line_id" property="lineId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, entry_no, entry_date, entry_dept_id, company_id, workshop_id, line_id
    </sql>

    <!-- 插入value sql -->
    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id},
            #{item.entryNo},
            #{item.entryDate},
            #{item.entryDeptId},
            #{item.companyId},
            #{item.workshopId},
            #{item.lineId},
        </trim>
    </sql>


    <insert id="insertList" parameterType="java.util.List">
        <if test="list != null and list.size > 0">
            INSERT INTO bu_material_entry_order
            (
            <include refid="Base_Column_List"/>
            )
            VALUES
            <foreach collection="list" item="item" index="index" separator=",">
                (
                <include refid="insertValueItems"/>
                )
            </foreach>
        </if>
    </insert>

    <select id="selectEntryOrderById" resultType="org.jeecg.modules.material.entry.bean.BuMaterialEntryOrder">
        select t.*,
               t1.depart_name as entryDeptName
        from bu_material_entry_order t
                 left join sys_depart t1 on t1.id = t.entry_dept_id
    </select>

</mapper>
