<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.produce.trainhistory.mapper.BuTrainPlaceProduceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.produce.trainhistory.bean.BuTrainPlace">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="place_code" property="placeCode" />
        <result column="place_name" property="placeName" />
        <result column="remark" property="remark" />
        <result column="place_type" property="placeType" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="update_time" property="updateTime" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, place_code, place_name, remark, place_type, create_time, create_by, update_time, update_by
    </sql>

    <select id="selectByStructureDetailId" resultType="org.jeecg.modules.produce.trainhistory.bean.BuTrainPlace">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bu_train_place
        WHERE id = (SELECT place_id FROM bu_train_structure_detail WHERE id = #{structureDetailId})
    </select>

</mapper>
