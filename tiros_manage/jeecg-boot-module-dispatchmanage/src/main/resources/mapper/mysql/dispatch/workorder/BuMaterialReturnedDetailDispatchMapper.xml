<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.dispatch.workorder.mapper.BuMaterialReturnedDetailDispatchMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturnedDetail">
        <id column="id" property="id"/>
        <result column="returned_id" property="returnedId"/>
        <result column="work_order_id" property="workOrderId"/>
        <result column="material_type_id" property="materialTypeId"/>
        <result column="order_material_id" property="orderMaterialId"/>
        <result column="return_amount" property="returnAmount"/>
        <result column="location_wbs" property="locationWbs"/>
        <result column="location_name" property="locationName"/>
        <result column="ebs_wh_code" property="ebsWhCode"/>
        <result column="ebs_wh_child_code" property="ebsWhChildCode"/>
        <result column="trade_no" property="tradeNo"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, returned_id, work_order_id, material_type_id, order_material_id, return_amount,
        location_wbs, location_name, ebs_wh_code, ebs_wh_child_code, trade_no
    </sql>

    <!-- 插入value sql -->
    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id},
            #{item.returnedId},
            #{item.workOrderId},
            #{item.materialTypeId},
            #{item.orderMaterialId},
            #{item.returnAmount},
            #{item.locationWbs},
            #{item.locationName},
            #{item.ebsWhCode},
            #{item.ebsWhChildCode},
            #{item.tradeNo},
        </trim>
    </sql>


    <insert id="insertList" parameterType="java.util.List">
        <if test="list != null and list.size > 0">
            INSERT INTO bu_material_returned_detail
            (
            <include refid="Base_Column_List"/>
            )
            VALUES
            <foreach collection="list" item="item" index="index" separator=",">
                (
                <include refid="insertValueItems"/>
                )
            </foreach>
        </if>
    </insert>

    <select id="selectListByReturnedId" resultType="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturnedDetail">
        select t.*,
               t1.code    as materialTypeCode,
               t1.name    as materialTypeName,
               t1.spec    as materialTypeSpec,
               t1.unit    as materialTypeUnit,
               t2.receive as applyAmount
        from bu_material_returned_detail t
                 left join bu_material_type t1 on t1.id = t.material_type_id
                 left join bu_material_apply_detail t2 on t2.id = t.order_material_id
        where t.returned_id = #{returnedId}
    </select>

    <select id="selectUnConfirmListByOrderMaterialIdList"
            resultType="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturnedDetail">
        select
        t.id,
        t.returned_id,
        t1.order_material_id as workOrderMaterialId
        from bu_material_returned_detail t
        left join bu_material_apply_detail t1 on t1.id = t.order_material_id
        left join bu_material_returned t2 on t2.id = t.returned_id
        where t2.status = 0
        and t1.order_material_id
        <choose>
            <when test="orderMaterialIdList != null and orderMaterialIdList.size >0">
                in
                <foreach collection="orderMaterialIdList" item="orderMaterialId" index="index" separator="," open="("
                         close=")">
                    #{orderMaterialId}
                </foreach>
            </when>
            <otherwise>
                = '-1'
            </otherwise>
        </choose>
    </select>

</mapper>
