    <select id="selectPageByCondition" resultType="org.jeecg.modules.dispatch.fault.bean.BuFaultInfo">
        SELECT
        t.*,
        t1.line_name AS lineName,
        t2.name AS sysName,
        t3.name AS faultAssetName,
        t4.group_name AS reportGroupName,
        t6.plan_name,
        IFNULL(t7.process_status, '未发起') AS wfStatus,
        t7.process_candidate,
        t8.flt_code as faultCodeCode,
        t8.flt_name as faultCodeCodeDes
        FROM bu_fault_info t
        LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
        LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
        LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
        LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
        LEFT JOIN bu_repair_plan t6 ON t6.id = t.plan_id
        LEFT JOIN wf_biz_status t7 ON t7.business_key = t.id
        LEFT JOIN bu_fault_code_new t8 ON t8.flt_code = t.fault_code_id
        <where>
            <choose>
                <when test="queryVO.canceled != null and queryVO.canceled == 1">
                    and t.submit_status = 2
                </when>
                <otherwise>
                    and t.submit_status = 1
                </otherwise>
            </choose>
            <if test="queryVO.lineId != null and queryVO.lineId != ''">
                AND t.line_id = #{queryVO.lineId}
            </if>
            <if test="queryVO.trainNo != null and queryVO.trainNo != ''">
                AND t.train_no = #{queryVO.trainNo}
            </if>
            <if test="queryVO.startDate != null and queryVO.endDate != null">
                AND t.report_time BETWEEN #{queryVO.startDate} AND #{queryVO.endDate}
            </if>
            <if test="queryVO.reportGroupId != null and queryVO.reportGroupId != ''">
                AND t.report_group_id = #{queryVO.reportGroupId}
            </if>
            <if test="queryVO.sysId != null and queryVO.sysId != ''">
                AND t.sys_id = #{queryVO.sysId}
            </if>
            <if test="queryVO.faultAssetId != null and queryVO.faultAssetId != ''">
                AND t.fault_asset_id = #{queryVO.faultAssetId}
            </if>
            <if test="queryVO.workstationId != null and queryVO.workstationId != ''">
                AND t.work_station_id = #{queryVO.workstationId}
            </if>
            <if test="queryVO.level != null">
                AND t.fault_level = #{queryVO.level}
            </if>
            <if test="queryVO.status != null">
                AND t.status = #{queryVO.status}
            </if>
            <if test="queryVO.phase != null">
                AND t.phase = #{queryVO.phase}
            </if>
            <if test="queryVO.online != null">
                AND t.f_online = #{queryVO.online}
            </if>
            <if test="queryVO.hasDuty != null">
                AND t.has_duty = #{queryVO.hasDuty}
            </if>
            <if test="queryVO.outsource != null">
                AND t.outsource = #{queryVO.outsource}
            </if>
            <if test="queryVO.planId != null and queryVO.planId != ''">
                AND t.plan_id = #{queryVO.planId}
            </if>
            <if test="queryVO.wfStatus != null and queryVO.wfStatus != ''">
                AND IFNULL(t7.process_status, '未发起') = #{queryVO.wfStatus}
            </if>
            <if test="queryVO.fromType != null">
                AND t.from_type = #{queryVO.fromType}
            </if>
        </where>
        ORDER BY t.report_time DESC, t.fault_sn DESC
    </select>

    <select id="selectFaultById" resultMap="BaseResultMap_Collection">
        SELECT t.*,
               t1.line_name                      AS lineName,
               t2.name                           AS sysName,
               t3.name                           AS faultAssetName,
               t4.group_name                     AS reportGroupName,
               t5.name                           AS subSysName,
               t6.category_code                  as categoryCode,
               t6.category_desc                  as categoryCodeDes,
               t7.flt_code                       as faultCodeCode,
               t7.flt_name                       as faultCodeCodeDes,
               t8.name                           as outSupplierName,
               t9.plan_name,
               IFNULL(t10.process_status, '未发起') AS wfStatus,
               t10.process_candidate
        FROM bu_fault_info t
                 LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
                 LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
                 LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
                 LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
                 LEFT JOIN bu_train_asset_type t5 ON t5.id = t.sub_sys_id
                 LEFT JOIN bu_fault_category t6 ON t6.id = t.category_id
                 LEFT JOIN bu_fault_code_new t7 ON t7.flt_code = t.fault_code_id
                 LEFT JOIN bu_base_supplier t8 ON t8.id = t.out_supplier_id
                 LEFT JOIN bu_repair_plan t9 ON t9.id = t.plan_id
                 LEFT JOIN wf_biz_status t10 ON t10.business_key = t.id
        WHERE t.id = #{id}
    </select>

    <select id="selectFaultForRptById" resultType="org.jeecg.modules.dispatch.fault.bean.BuFaultInfo">
        SELECT t.*,
               t2.depot_id,
               t3.id                AS trainId,
               t4.repair_program_id AS programId,
               t1.group_name        as reportGroupName,
               t5.realname          as reportUserName,
               t5.work_no           as reportUserWorkNo
        FROM bu_fault_info t
                 LEFT JOIN bu_mtr_workshop_group t1 ON t1.id = t.report_group_id
                 LEFT JOIN bu_mtr_workshop t2 ON t2.id = t.workshop_id
                 LEFT JOIN bu_train_info t3 ON t3.train_no = t.train_no
                 LEFT JOIN bu_repair_plan t4 ON t4.id = t.plan_id
                 LEFT JOIN sys_user t5 ON t5.id = t.report_user_id
        WHERE t.id = #{id}
    </select>

    <select id="selectAllFaultForRpt" resultType="org.jeecg.modules.dispatch.fault.bean.BuFaultInfo">
        SELECT t.*,
        t2.depot_id,
        t3.id AS trainId,
        t4.repair_program_id AS programId,
        t1.group_name as reportGroupName,
        t5.realname as reportUserName,
        t5.work_no as reportUserWorkNo
        FROM bu_fault_info t
        LEFT JOIN bu_mtr_workshop_group t1 ON t1.id = t.report_group_id
        LEFT JOIN bu_mtr_workshop t2 ON t2.id = t.workshop_id
        LEFT JOIN bu_train_info t3 ON t3.train_no = t.train_no
        LEFT JOIN bu_repair_plan t4 ON t4.id = t.plan_id
        LEFT JOIN sys_user t5 ON t5.id = t.report_user_id
        WHERE t.submit_status != 2
        and t3.id is not null
        <if test="trainNoList != null and trainNoList.size > 0">
            and t.train_no in
            <foreach collection="trainNoList" item="trainNo" open="(" separator="," close=")">
                #{trainNo}
            </foreach>
        </if>
    </select>

    <select id="selectListForMaximoByIdList" resultMap="BaseResultMap_Collection_ForMaximo">
        SELECT t.*,
        t1.line_name,
        t1.line_num,
        t2.name AS sysName,
        t3.code as faultAssetCode,
        t3.name AS faultAssetName,
        t4.group_name AS reportGroupName,
        t6.realname as reportUserName,
        t6.work_no as reportUserWorkNo,
        t6.phone as reportUserPhone,
        t7.realname as dutyEngineerName,
        t8.category_code as categoryCode,
        t8.category_desc as categoryCodeDes,
        t9.flt_code as faultCodeCode,
        t9.flt_name as faultCodeCodeDes
        FROM bu_fault_info t
        LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
        LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
        LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
        LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
        left join sys_user t6 on t6.id = t.report_user_id
        left join sys_user t7 on t7.id = t.duty_engineer
        LEFT JOIN bu_fault_category t8 ON t8.id = t.category_id
        LEFT JOIN bu_fault_code_new t9 ON t9.flt_code = t.fault_code_id
        WHERE t.id
        <choose>
            <when test="faultIdList != null and faultIdList.size > 0">
                in
                <foreach collection="faultIdList" item="faultId" open="(" separator="," close=")">
                    #{faultId}
                </foreach>
            </when>
            <otherwise>
                = '-1'
            </otherwise>
        </choose>
