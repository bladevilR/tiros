<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.dispatch.fault.mapper.BuFaultCategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.dispatch.fault.bean.BuFaultCategory">
        <id column="id" property="id"/>
        <result column="category_code" property="categoryCode"/>
        <result column="category_desc" property="categoryDesc"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_code, category_desc
    </sql>

    <select id="selectPageByCondition" resultType="org.jeecg.modules.dispatch.fault.bean.BuFaultCategory">
        select t.* from bu_fault_category t
        <where>
            <if test="queryVO.searchText != null and queryVO.searchText != ''">
                and
                (
                t.category_code like '%'||#{queryVO.searchText}||'%'
                or
                t.category_desc like '%'||#{queryVO.searchText}||'%'
                )
            </if>
        </where>
    </select>

</mapper>
