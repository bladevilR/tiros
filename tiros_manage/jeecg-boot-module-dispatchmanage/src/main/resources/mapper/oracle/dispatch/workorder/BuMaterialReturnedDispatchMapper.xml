<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.dispatch.workorder.mapper.BuMaterialReturnedDispatchMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturned">
        <id column="id" property="id"/>
        <result column="bill_code" property="billCode"/>
        <result column="bill_name" property="billName"/>
        <result column="bill_date" property="billDate"/>
        <result column="work_order_id" property="workOrderId"/>
        <result column="group_id" property="groupId"/>
        <result column="handle_user_id" property="handleUserId"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="sync_time" property="syncTime"/>
        <result column="sync_result" property="syncResult"/>
        <result column="sync_result_time" property="syncResultTime"/>
        <result column="company_id" property="companyId"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="line_id" property="lineId"/>
    </resultMap>

    <resultMap id="ResultMap_BuMaterialReturned_WithDetail"
               type="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturned">
        <id column="id" property="id"/>
        <result column="bill_code" property="billCode"/>
        <result column="bill_name" property="billName"/>
        <result column="bill_date" property="billDate"/>
        <result column="work_order_id" property="workOrderId"/>
        <result column="group_id" property="groupId"/>
        <result column="handle_user_id" property="handleUserId"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="sync_time" property="syncTime"/>
        <result column="sync_result" property="syncResult"/>
        <result column="sync_result_time" property="syncResultTime"/>
        <result column="company_id" property="companyId"/>
        <result column="workshop_id" property="workshopId"/>
        <result column="line_id" property="lineId"/>
        <collection property="detailList" column="id"
                    ofType="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturnedDetail"
                    select="selectReturnedDetailList"/>
    </resultMap>
    <select id="selectReturnedDetailList"
            resultType="org.jeecg.modules.dispatch.workorder.bean.BuMaterialReturnedDetail">
        select t.*,
               t1.code    as materialTypeCode,
               t1.name    as materialTypeName,
               t1.spec    as materialTypeSpec,
               t1.unit    as materialTypeUnit,
               t2.receive as applyAmount
        from bu_material_returned_detail t
                 left join bu_material_type t1 on t1.id = t.material_type_id
                 left join bu_material_apply_detail t2 on t2.id = t.order_material_id
        where t.returned_id = #{id}
    </select>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, bill_code, bill_name, bill_date, work_order_id, group_id, handle_user_id,
        status, remark, create_time, create_by, update_time, update_by, sync_time, sync_result, sync_result_time,
        company_id, workshop_id, line_id
    </sql>

    <select id="selectListByOrderId" resultMap="ResultMap_BuMaterialReturned_WithDetail">
        select t.*,
               t1.order_code  as workOrderCode,
               t1.order_name  as workOrderName,
               t2.depart_name as groupName,
               t3.realname    as handleUserName
        from bu_material_returned t
                 left join bu_work_order t1 on t1.id = t.work_order_id
                 left join sys_depart t2 on t2.id = t.group_id
                 left join sys_user t3 on t3.id = t.handle_user_id
        where t.work_order_id = #{orderId}
    </select>

    <select id="countUnConfirmByOrderId" resultType="java.lang.Integer">
        select count(t.id)
        from bu_material_returned t
        where t.status != 1
          and t.work_order_id = #{orderId}
    </select>

</mapper>
