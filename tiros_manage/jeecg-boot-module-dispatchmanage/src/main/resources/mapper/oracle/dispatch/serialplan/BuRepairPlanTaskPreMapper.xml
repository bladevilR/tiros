<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.dispatch.serialplan.mapper.BuRepairPlanTaskPreMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.dispatch.serialplan.bean.BuRepairPlanTaskPre">
        <id column="id" property="id" />
        <result column="task_no" property="taskNo" />
        <result column="task_name" property="taskName" />
        <result column="task_id" property="taskId" />
        <result column="pre_type" property="preType" />
        <result column="delay" property="delay" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, task_no, task_name, task_id, pre_type, delay
    </sql>

    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id, jdbcType=VARCHAR},
            #{item.taskNo, jdbcType=VARCHAR},
            #{item.taskName, jdbcType=VARCHAR},
            #{item.taskId, jdbcType=VARCHAR},
            #{item.preType, jdbcType=VARCHAR},
            #{item.delay, jdbcType=INTEGER}
        </trim>
    </sql>

    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO bu_repair_plan_task_pre
        (
        <include refid="Base_Column_List"/>
        )
        <foreach collection="list" item="item" index="index" separator="union all">
            (
            select
            <include refid="insertValueItems"/>
            from dual
            )
        </foreach>
    </insert>

    <select id="selectListByTaskId" resultType="org.jeecg.modules.dispatch.serialplan.bean.BuRepairPlanTaskPre">
        select t.*
        from bu_repair_plan_task_pre t
        where t.task_id = #{taskId}
    </select>

</mapper>
