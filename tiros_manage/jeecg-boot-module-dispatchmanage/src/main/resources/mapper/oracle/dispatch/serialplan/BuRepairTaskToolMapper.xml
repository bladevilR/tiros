<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.dispatch.serialplan.mapper.BuRepairTaskToolMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.dispatch.serialplan.bean.BuRepairTaskTool">
        <id column="id" property="id"/>
        <result column="task_id" property="taskId"/>
        <result column="tool_type_id" property="toolTypeId"/>
        <result column="amount" property="amount"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, task_id, tool_type_id, amount, remark
    </sql>

    <sql id="insertValueItems">
        <trim suffixOverrides=",">
            #{item.id, jdbcType=VARCHAR},
            #{item.taskId, jdbcType=VARCHAR},
            #{item.toolTypeId, jdbcType=VARCHAR},
            #{item.amount, jdbcType=DOUBLE},
            #{item.remark, jdbcType=VARCHAR}
        </trim>
    </sql>

    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO bu_repair_task_tool
        (
        <include refid="Base_Column_List"/>
        )
        <foreach collection="list" item="item" index="index" separator="union all">
            (
            select
            <include refid="insertValueItems"/>
            from dual
            )
        </foreach>
    </insert>

    <select id="selectDistinctListByPlanId" resultType="org.jeecg.modules.dispatch.serialplan.bean.BuRepairTaskTool">
        select t.*,
               t1.code,
               t1.name,
               t1.spec,
               t1.unit,
               t1.price,
               t1.kind,
               t1.category1,
               t1.category2
        from (select a.tool_type_id,
                     SUM(a.amount) as amount
              from bu_repair_task_tool a
                       left join bu_repair_plan_task a1 on a1.id = a.task_id
              where a1.plan_id = #{planId}
              group by a.tool_type_id) t
                 left join bu_material_type t1 on t1.id = t.tool_type_id
        order by t1.code
    </select>

    <select id="selectListForGenerateOrderByPlanId" resultType="org.jeecg.modules.dispatch.serialplan.bean.BuRepairTaskTool">
        select t.*
        from bu_repair_task_tool t
                 left join bu_repair_plan_task t1 on t1.id = t.task_id
        where t1.plan_id = #{planId}
    </select>

    <select id="selectListByTaskId" resultType="org.jeecg.modules.dispatch.serialplan.bean.BuRepairTaskTool">
        select t.*,
               t1.code,
               t1.name,
               t1.spec,
               t1.unit,
               t1.price,
               t1.kind,
               t1.category1,
               t1.category2
        from bu_repair_task_tool t
                 left join bu_material_type t1 on t1.id = t.tool_type_id
        where t.task_id = #{taskId}
        order by t1.code
    </select>

</mapper>
