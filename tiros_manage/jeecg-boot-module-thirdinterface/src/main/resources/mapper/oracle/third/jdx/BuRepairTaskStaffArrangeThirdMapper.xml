<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.third.jdx.mapper.BuRepairTaskStaffArrangeThirdMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.third.jdx.bean.BuRepairTaskStaffArrange">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="user_id" property="userId"/>
        <result column="ord_tsk_wk_station_id" property="ordTskWkStationId"/>
        <result column="work_time" property="workTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_id, user_id, ord_tsk_wk_station_id, work_time
    </sql>

    <select id="selectOrderTaskByStaffArrangeId" resultType="org.jeecg.modules.third.jdx.bean.BuWorkOrderTask">
        select t2.*
        from bu_repair_task_staff_arrange t
                 left join bu_work_order_task_workstation t1 on t1.id = t.ord_tsk_wk_station_id
                 left join bu_work_order_task t2 on t2.id = t1.order_task_id
        where t.id = #{staffArrangeId}
    </select>

</mapper>
