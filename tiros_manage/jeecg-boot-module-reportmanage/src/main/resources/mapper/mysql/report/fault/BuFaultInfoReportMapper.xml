                    ofType="org.jeecg.modules.report.fault.bean.BuFaultHandleRecord"
                    select="selectHandleRecordListByFaultId"/>
    </resultMap>
    <select id="selectHandleRecordListByFaultId" resultType="org.jeecg.modules.report.fault.bean.BuFaultHandleRecord">
        SELECT t1.*,
               t2.group_name    AS solutionGroupName,
               t3.realname      AS solutionUserName,
               t4.reason_code   AS faultReasonCode,
               t5.solution_code AS faultSolutionCode
        FROM bu_fault_handle_record t1
                 LEFT JOIN bu_mtr_workshop_group t2 ON t2.id = t1.solution_group_id
                 LEFT JOIN sys_user t3 ON t3.id = t1.solution_user_id
                 LEFT JOIN bu_fault_reason t4 ON t4.id = t1.fault_reason_id
                 LEFT JOIN bu_fault_solution t5 ON t5.id = t1.fault_solution_id
        WHERE t1.fault_info_id = #{id}
        ORDER BY t1.solution_time DESC
    </select>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_id, fault_code_id, fault_sn, fault_desc, sys_id, sub_sys_id, fault_asset_id, happen_time,
        work_order_id, order_task_id, line_id, train_no, phase, fault_level, f_online, has_duty, outsource, report_group_id,
        report_user_id, report_time, duty_engineer, status, close_user_id, close_time, submit_status, work_station_id,
        create_time, create_by, update_time, update_by, create_type, train_structure_id, handle_status, handle_order_id,
        out_supplier_id, form_value_id, plan_id, company_id, workshop_id, track_message, from_type
    </sql>


    <select id="selectListByCondition" resultMap="BaseResultMap_Collection">
        SELECT
        t.*,
        t7.category_code,
        t7.category_desc as categoryCodeDes,
        t1.line_name AS lineName,
        t2.name AS sysName,
        t3.name AS faultAssetName,
        t4.group_name AS reportGroupName,
        t6.name AS workstationName
        FROM bu_fault_info t
        LEFT JOIN bu_mtr_line t1 ON t1.line_id = t.line_id
        LEFT JOIN bu_train_asset_type t2 ON t2.id = t.sys_id
        LEFT JOIN bu_maximo_train_asset t3 ON t3.id = t.fault_asset_id
        LEFT JOIN bu_mtr_workshop_group t4 ON t4.id = t.report_group_id
        LEFT JOIN bu_mtr_workstation t6 ON t6.id = t.work_station_id
        LEFT JOIN bu_fault_category t7 ON t7.id = t.category_id
        <where>
            AND t.submit_status != 2
            <if test="queryVO.lineId != null and queryVO.lineId != ''">
                AND t.line_id = #{queryVO.lineId}
            </if>
            <if test="queryVO.trainNo != null and queryVO.trainNo != ''">
                AND t.train_no = #{queryVO.trainNo}
            </if>
            <if test="queryVO.startDate != null and queryVO.endDate != null">
                AND t.report_time BETWEEN #{queryVO.startDate} AND #{queryVO.endDate}
            </if>
            <if test="queryVO.reportGroupId != null and queryVO.reportGroupId != ''">
                AND t.report_group_id = #{queryVO.reportGroupId}
            </if>
            <if test="queryVO.sysId != null and queryVO.sysId != ''">
                AND t.sys_id = #{queryVO.sysId}
            </if>
            <if test="queryVO.faultAssetId != null and queryVO.faultAssetId != ''">
                AND t.fault_asset_id = #{queryVO.faultAssetId}
            </if>
            <if test="queryVO.level != null">
                AND t.fault_level = #{queryVO.level}
            </if>
            <if test="queryVO.status != null">
                AND t.status = #{queryVO.status}
            </if>
            <if test="queryVO.phase != null">
                AND t.phase = #{queryVO.phase}
            </if>
            <if test="queryVO.online != null">
                AND t.f_online = #{queryVO.online}
            </if>
            <if test="queryVO.hasDuty != null">
                AND t.has_duty = #{queryVO.hasDuty}
            </if>
            <if test="queryVO.outsource != null">
                AND t.outsource = #{queryVO.outsource}
            </if>
            <if test="queryVO.workstationId != null and queryVO.workstationId != ''">
                AND t.work_station_id = #{queryVO.workstationId}
            </if>
            <if test="queryVO.fromType != null">
                AND t.from_type = #{queryVO.fromType}
            </if>
        </where>
        ORDER BY t.report_time DESC, t.fault_sn DESC
    </select>

    <select id="selectListByBuDayReportQueryVO" resultMap="BaseResultMap_Collection">
        select t.*,
               t2.realname as reportUserName,
               t3.realname as dutyEngineerName
        from bu_fault_info t
                 left join sys_user t2 on t2.id = t.report_user_id
                 left join sys_user t3 on t3.id = t.duty_engineer
        where t.submit_status != 2
          and t.train_no = #{queryVO.trainNo}
          and t.workshop_id = #{queryVO.workshopId}
          and TO_DAYS(#{queryVO.day}) = TO_DAYS(t.report_time)
        order by t.report_time desc, t.fault_sn desc
    </select>

    <select id="selectListByFaultCountQueryVO" resultType="org.jeecg.modules.report.fault.bean.BuFaultInfo">
        select t.*,
        t3.train_index,
        t2.name as programName,
        t2.pro_type as programType
        from bu_fault_info t
        left join bu_repair_plan t1 on t1.id = t.plan_id
        left join bu_repair_program t2 on t2.id = t1.repair_program_id
        left join (select * from bu_repair_exchang where trade_type = 0) t3 on t3.id = t1.exchange_id
        where t.submit_status != 2
        <if test="queryVO.lineId != null and queryVO.lineId != ''">
            and t.line_id = #{queryVO.lineId}
        </if>
        <if test="queryVO.trainNo != null and queryVO.trainNo != ''">
            and t.train_no = #{queryVO.trainNo}
        </if>
        <if test="queryVO.startDate != null">
            and t.happen_time &gt;= #{queryVO.startDate}
        </if>
        <if test="queryVO.endDate != null">
            and t.happen_time &lt;= #{queryVO.endDate}
        </if>
    </select>

</mapper>
